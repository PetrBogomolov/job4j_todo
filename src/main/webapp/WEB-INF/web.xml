<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>AddItemServlet</servlet-name>
    <servlet-class>ru.job4j.todo.servlets.AddItemServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ShowAllItemsServlet</servlet-name>
    <servlet-class>ru.job4j.todo.servlets.ShowAllItemsServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ShowFilterItems</servlet-name>
    <servlet-class>ru.job4j.todo.servlets.ShowFilterItems</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ItemDoneServlet</servlet-name>
    <servlet-class>ru.job4j.todo.servlets.ItemDoneServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>AddItemServlet</servlet-name>
    <url-pattern>/add</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ShowAllItemsServlet</servlet-name>
    <url-pattern>/showAll</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ShowFilterItems</servlet-name>
    <url-pattern>/showFilter</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ItemDoneServlet</servlet-name>
    <url-pattern>/done</url-pattern>
  </servlet-mapping>
</web-app>
